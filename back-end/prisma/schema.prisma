// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  username        String  @unique
  email           String  @unique
  fullName        String
  avatarName      String
  isOnLine        Boolean
  Status          String
  accessToken     String
  phoneNumber     String
  refreshToken    String
  twoFactor       Boolean
  qrCodeFileName  String
  towFactorSecret String
  levelGame       Int
}

model HistoryGame {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  winnerId    String
  loserId     String
  scoreWinner Int
  scoreLoser  Int
}
